{
	"llvm-target": "armv6m-none-eabi",
	"build-tags": ["microbit", "nrf51", "nrf", "arm", "js", "wasm"],
	"linker": "arm-none-eabi-gcc",
	"pre-link-args": ["--specs=nosys.specs", "-nostartfiles", "-mcpu=cortex-m0", "-mthumb", "-T", "targets/nrf51.ld", "-Wl,--gc-sections", "-fno-exceptions", "-fno-unwind-tables", "-ffunction-sections", "-fdata-sections", "-Os", "-DNRF51", "-Ilib/CMSIS/CMSIS/Include", "lib/nrfx/mdk/system_nrf51.c", "src/device/nrf/nrf51.s"],
	"objcopy": "arm-none-eabi-objcopy",
	"flash": "nrfjprog -f nrf51 --sectorerase --program {hex} --reset"
}
